{
    "name": "devlop/prefixed-logger",
    "description": "PSR-3 wrapper to prefix all messages going into a logger",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Johan Rosenson",
            "email": "johan@devlop.se"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "psr/log": "^1.0.1|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^5.2",
        "monolog/monolog": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Devlop\\PrefixedLogger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Devlop\\PrefixedLogger\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
